<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.pranitha.vidyasahayog.DetailsActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/abckids"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your Name,Age and select a Button"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_orange_light"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:text="Name: "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nameval"
                android:layout_toRightOf="@+id/name"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:text="Age :  "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ageval"
                android:inputType="number"
                android:layout_toRightOf="@+id/age"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/numberButton"
                android:background="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:elevation="2dp"
                android:textStyle="italic"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:text="Letters!!"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/letterButton"
                android:layout_toRightOf="@+id/numberButton"
                android:background="@android:color/holo_green_light"
                android:textColor="@android:color/white"
                android:textSize="15dp"
                android:elevation="2dp"
                android:textStyle="italic"
                android:padding="10dp"
                android:layout_marginLeft="50dp"
                android:text="Numbers!!"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

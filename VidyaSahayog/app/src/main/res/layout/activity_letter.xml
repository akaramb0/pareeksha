<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/garden"
    android:orientation="vertical"
    tools:context="com.example.pranitha.vidyasahayog.LetterActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi"
        android:id="@+id/namegreeting"
        android:layout_gravity="left"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:textColor="@android:color/holo_red_dark"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Starting Letter of this Fruit!!"
        android:layout_gravity="left"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@android:color/holo_blue_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:id="@+id/imageselection"
            android:layout_marginLeft="100dp"
            android:background="@drawable/appleimg"
            android:layout_marginRight="100dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
<Button
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:text="A"
    android:textSize="40dp"
    android:textStyle="bold"
    android:id="@+id/button1"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:background="@drawable/redbutton"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:text="C"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:id="@+id/button2"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bluebutton"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="X"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:id="@+id/button3"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/greenbutton"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="50dp"
                    android:text="B"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:id="@+id/button4"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/yellowbutton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
